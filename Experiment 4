#include <iostream>
using namespace std;

class Result1 {
public:
    float marks;
    void getData() {
        cout << "Enter marks for Result1: ";
        cin >> marks;
    }
};

class Result2 {
public:
    float marks;
    void getData() {
        cout << "Enter marks for Result2: ";
        cin >> marks;
    }
};

int main() {
    Result1 r1;
    Result2 r2;
    r1.getData();
    r2.getData();
    float avg = (r1.marks + r2.marks) / 2;
    cout << "Average Marks = " << avg << endl;
    return 0;
}





#include <iostream>
using namespace std;

class A;
class B;

class A {
    int num1;
public:
    void getData() {
        cout << "Enter number from class A: ";
        cin >> num1;
    }
    friend void greatest(A, B);
};

class B {
    int num2;
public:
    void getData() {
        cout << "Enter number from class B: ";
        cin >> num2;
    }
    friend void greatest(A, B);
};

void greatest(A a, B b) {
    if (a.num1 > b.num2)
        cout << "Greatest number is: " << a.num1 << endl;
    else
        cout << "Greatest number is: " << b.num2 << endl;
}

int main() {
    A obj1;
    B obj2;
    obj1.getData();
    obj2.getData();
    greatest(obj1, obj2);
    return 0;
}






#include <iostream>
using namespace std;

class Swap {
    int num;
public:
    void getData() {
        cout << "Enter value: ";
        cin >> num;
    }
    void display() {
        cout << num << endl;
    }
    friend void swapValues(Swap &, Swap &);
};

void swapValues(Swap &x, Swap &y) {
    int temp = x.num;
    x.num = y.num;
    y.num = temp;
}

int main() {
    Swap s1, s2;
    cout << "Enter data for first object:\n";
    s1.getData();
    cout << "Enter data for second object:\n";
    s2.getData();

    cout << "\nBefore swapping:\n";
    s1.display();
    s2.display();

    swapValues(s1, s2);

    cout << "\nAfter swapping:\n";
    s1.display();
    s2.display();

    return 0;
}






#include <iostream>
using namespace std;

class Swap {
    int num;
public:
    void getData() {
        cout << "Enter value: ";
        cin >> num;
    }

    void display() {
        cout << num << endl;
    }

    void swapValues(Swap &obj) {
        int temp = num;
        num = obj.num;
        obj.num = temp;
    }
};

int main() {
    Swap s1, s2;

    cout << "Enter data for first object:\n";
    s1.getData();
    cout << "Enter data for second object:\n";
    s2.getData();

    cout << "\nBefore swapping:\n";
    cout << "Object 1: "; s1.display();
    cout << "Object 2: "; s2.display();

    s1.swapValues(s2);  // object passed as function argument

    cout << "\nAfter swapping:\n";
    cout << "Object 1: "; s1.display();
    cout << "Object 2: "; s2.display();

    return 0;
}







#include <iostream>
using namespace std;

class B; // forward declaration

class A {
    int num1;
public:
    void getData() {
        cout << "Enter number from class A: ";
        cin >> num1;
    }
    void display() {
        cout << "Number from class A: " << num1 << endl;
    }
    friend void swapValues(A &, B &);
};

class B {
    int num2;
public:
    void getData() {
        cout << "Enter number from class B: ";
        cin >> num2;
    }
    void display() {
        cout << "Number from class B: " << num2 << endl;
    }
    friend void swapValues(A &, B &);
};

void swapValues(A &x, B &y) {
    int temp = x.num1;
    x.num1 = y.num2;
    y.num2 = temp;
}

int main() {
    A obj1;
    B obj2;

    obj1.getData();
    obj2.getData();

    cout << "\nBefore Swapping:\n";
    obj1.display();
    obj2.display();

    swapValues(obj1, obj2);

    cout << "\nAfter Swapping:\n";
    obj1.display();
    obj2.display();

    return 0;
}

