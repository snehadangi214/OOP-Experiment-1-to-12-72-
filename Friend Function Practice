#include <iostream>
using namespace std;

class ClassB;  

class ClassA {
    int a;
public:
    void setData(int x) { a = x; }
    friend int sum(ClassA, ClassB);
};

class ClassB {
    int b;
public:
    void setData(int y) { b = y; }
    friend int sum(ClassA, ClassB);
};

int sum(ClassA objA, ClassB objB) {
    return objA.a + objB.b;
}

int main() {
    ClassA a;
    ClassB b;
    a.setData(10);
    b.setData(20);
    cout << "Sum = " << sum(a, b) << endl;
    return 0;
}






#include <iostream>
using namespace std;

class Number {
    int n;
public:
    void setData(int x) { n = x; }
    void display() { cout << n << endl; }
    friend void swapNumbers(Number&, Number&);
};

void swapNumbers(Number& a, Number& b) {
    int temp = a.n;
    a.n = b.n;
    b.n = temp;
}

int main() {
    Number n1, n2;
    n1.setData(10);
    n2.setData(20);
    swapNumbers(n1, n2);
    n1.display();
    n2.display();
    return 0;
}





#include <iostream>
using namespace std;

class Cube;

class Box {
    int volume;
public:
    void setVolume(int v) { volume = v; }
    friend void findGreater(Box, Cube);
};

class Cube {
    int volume;
public:
    void setVolume(int v) { volume = v; }
    friend void findGreater(Box, Cube);
};

void findGreater(Box b, Cube c) {
    if (b.volume > c.volume)
        cout << "Box has greater volume" << endl;
    else
        cout << "Cube has greater volume" << endl;
}

int main() {
    Box b;
    Cube c;
    b.setVolume(30);
    c.setVolume(50);
    findGreater(b, c);
    return 0;
}





#include <iostream>
using namespace std;

class Complex {
    int real, imag;
public:
    void setData(int r, int i) { real = r; imag = i; }
    void display() { cout << real << " + " << imag << "i" << endl; }
    friend Complex add(Complex, Complex);
};

Complex add(Complex c1, Complex c2) {
    Complex temp;
    temp.real = c1.real + c2.real;
    temp.imag = c1.imag + c2.imag;
    return temp;
}

int main() {
    Complex c1, c2, c3;
    c1.setData(3, 4);
    c2.setData(5, 6);
    c3 = add(c1, c2);
    c3.display();
    return 0;
}





#include <iostream>
using namespace std;

class Student {
    string name;
    int m1, m2, m3;
public:
    void setData(string n, int x, int y, int z) {
        name = n; m1 = x; m2 = y; m3 = z;
    }
    friend void calculateAverage(Student);
};

void calculateAverage(Student s) {
    float avg = (s.m1 + s.m2 + s.m3) / 3.0;
    cout << "Name: " << s.name << ", Average Marks: " << avg << endl;
}

int main() {
    Student s;
    s.setData("Sneha", 80, 90, 85);
    calculateAverage(s);
    return 0;
}






#include <iostream>
using namespace std;

class Beta;
class Gamma;

class Alpha {
    int a;
public:
    void set(int x) { a = x; }
    friend void sumAll(Alpha, Beta, Gamma);
};

class Beta {
    int b;
public:
    void set(int y) { b = y; }
    friend void sumAll(Alpha, Beta, Gamma);
};

class Gamma {
    int c;
public:
    void set(int z) { c = z; }
    friend void sumAll(Alpha, Beta, Gamma);
};

void sumAll(Alpha x, Beta y, Gamma z) {
    cout << "Sum = " << x.a + y.b + z.c << endl;
}

int main() {
    Alpha a; Beta b; Gamma g;
    a.set(10); b.set(20); g.set(30);
    sumAll(a, b, g);
    return 0;
}






#include <iostream>
#include <cmath>
using namespace std;

class Point {
    int x, y;
public:
    void set(int a, int b) { x = a; y = b; }
    friend double distance(Point, Point);
};

double distance(Point p1, Point p2) {
    return sqrt(pow(p2.x - p1.x, 2) + pow(p2.y - p1.y, 2));
}

int main() {
    Point p1, p2;
    p1.set(2, 3);
    p2.set(5, 7);
    cout << "Distance = " << distance(p1, p2) << endl;
    return 0;
}






#include <iostream>
using namespace std;

class BankAccount;

class Audit {
public:
    void check(BankAccount);
};

class BankAccount {
    double balance;
public:
    void setBalance(double b) { balance = b; }
    friend void Audit::check(BankAccount);
};

void Audit::check(BankAccount acc) {
    cout << "Account Balance: " << acc.balance << endl;
}

int main() {
    BankAccount b;
    b.setBalance(50000);
    Audit a;
    a.check(b);
    return 0;
}
